<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dd="urn:gong-wpf-dragdrop"
                    xmlns:models="clr-namespace:QuizGenerator.View.Models">
    <Style TargetType="{x:Type ItemsControl}"
           BasedOn="{StaticResource FlatBaseStyle}">
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="dd:DragDrop.UseDefaultDragAdorner" Value="False" />
        <Setter Property="dd:DragDrop.DropTargetAdornerBrush" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="dd:DragDrop.DropScrollingMode" Value="Both" />
    </Style>
</ResourceDictionary>