<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:comp="clr-namespace:QuizGenerator.View.Components"
                    xmlns:models="clr-namespace:QuizGenerator.View.Models">
    <Style TargetType="{x:Type comp:PieChart}"
           BasedOn="{StaticResource FlatBaseStyle}">
        <Setter Property="StartAngle" Value="-90" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type comp:PieChart}">
                    <Canvas x:Name="_canvas"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>