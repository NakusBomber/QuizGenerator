<Page x:Class="QuizGenerator.View.Views.Pages.QuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:QuizGenerator.View.Views.Pages"
      xmlns:comp="clr-namespace:QuizGenerator.View.Components"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:vms="clr-namespace:QuizGenerator.ViewModel.ViewModels;assembly=QuizGenerator.ViewModel"
      mc:Ignorable="d"
      Title="Question"
      d:Width="550"
      d:Height="450"
      d:DataContext="{d:DesignInstance vms:QuestionPageViewModel}">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.Resources>
                <x:Array x:Key="AnswerTestData"
                         Type="{x:Type sys:String}">
                    <sys:String>Answer 1</sys:String>
                    <sys:String>Answer 2</sys:String>
                    <sys:String>Answer 3</sys:String>
                    <sys:String>Answer 4</sys:String>
                </x:Array>
            </Grid.Resources>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Label Style="{StaticResource RequirementLabelStyle}"
                       Grid.Column="0"
                       Content="Question"/>

                <comp:ExtendedTextBox Grid.Column="1"
                                      Margin="10 0"
                                      Placeholder="Question text"/>

            </Grid>

            <Rectangle Fill="Gray"
                       Width="Auto"
                       Height="150"
                       Grid.Row="1"
                       Margin="20"/>
            <Button Style="{StaticResource PrimaryButtonStyle}"
                    Width="140"
                    Height="40"
                    Grid.Row="1"
                    Content="Open"/>

            <comp:IconButton VerticalAlignment="Center"
                             HorizontalAlignment="Right"
                             Margin="10 0"
                             Grid.Row="2"
                             Content="Add"
                             MaterialIcon="Add"/>

            <ItemsControl ItemsSource="{StaticResource AnswerTestData}"
                          Grid.Row="3">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type sys:String}">
                        <Border Background="Transparent"
                                Margin="0 10 0 0"
                                CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="{StaticResource TextBrush}">
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Style="{StaticResource HeaderLabelStyle}"
                                       Grid.Column="0"
                                       Content="{Binding}"/>

                                <comp:IconButton Grid.Column="1"
                                                 MaterialIcon="Edit"
                                                 Margin="0 0 5 0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <comp:IconButton VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             MaterialIcon="ContentSave"
                             Content="Save"
                             Grid.Row="4"/>
        </Grid>
    </ScrollViewer>
</Page>
