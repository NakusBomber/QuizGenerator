<Page x:Class="QuizGenerator.View.Views.Pages.QuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:comp="clr-namespace:QuizGenerator.View.Components"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:QuizGenerator.View.Views.Pages"
      mc:Ignorable="d"
      Title="Quiz" d:DesignWidth="517.601">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <x:Array x:Key="AnswerTestData"
                             Type="{x:Type sys:String}">
                        <sys:String>Answer 1</sys:String>
                        <sys:String>Answer 2</sys:String>
                        <sys:String>Answer 3</sys:String>
                        <sys:String>Answer 4</sys:String>
                    </x:Array>
                </Grid.Resources>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Label Style="{StaticResource RequirementLabelStyle}"
                           Grid.Column="0"
                           Grid.Row="0"
                           Content="Quiz name"/>

                    <comp:ExtendedTextBox Grid.Column="1"
                                          Grid.Row="0"
                                          Margin="10 0"
                                          Placeholder="Type name here"/>

                    <Label Style="{StaticResource HeaderLabelStyle}"
                           Grid.Row="1"
                           Content="Time limit"/>

                    <CheckBox Grid.Row="1"
                              IsChecked="True"
                              x:Name="TimeLimitCheckBox"
                              Margin="10 0"
                              HorizontalAlignment="Left"
                              Grid.Column="1"/>

                    <Label Content="Time"
                           Grid.Row="2"
                           Grid.Column="0"
                           Visibility="{Binding ElementName=TimeLimitCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Style="{StaticResource HeaderLabelStyle}"/>

                    <comp:ExtendedTextBox Placeholder="12:34"
                                          Margin="10 0"
                                          Visibility="{Binding ElementName=TimeLimitCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Grid.Row="2"
                                          Grid.Column="1"/>

                </Grid>

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Grid.Row="1">

                    <comp:IconButton ToolTip="Add"
                                     MaterialIcon="Add"
                                     Margin="0 0 10 0"/>

                    <comp:IconButton ToolTip="Export"
                                     MaterialIcon="ExportVariant"
                                     Margin="0 0 10 0"/>

                    <comp:IconButton ToolTip="Start"
                                     MaterialIcon="Play"/>
                </StackPanel>

                <StackPanel Grid.Row="2"
                            Orientation="Vertical"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">
                    <StackPanel.Resources>
                        <x:Array x:Key="TestAnswers"
                                 Type="{x:Type sys:String}">
                            <sys:String>Answer 1</sys:String>
                            <sys:String>Answer 2</sys:String>
                            <sys:String>Answer 3</sys:String>
                            <sys:String>Answer 4</sys:String>
                        </x:Array>
                    </StackPanel.Resources>

                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Style="{StaticResource HeaderLabelStyle}"
                                   Grid.Column="0"
                                   Content="Question"/>

                            <comp:IconButton ToolTip="Edit"
                                             Grid.Column="1"
                                             Margin="0 0 10 0"
                                             MaterialIcon="Edit"/>
                        </Grid>
                        <ItemsControl ItemsSource="{StaticResource TestAnswers}"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"
                                                VerticalAlignment="Stretch"
                                                HorizontalAlignment="Stretch"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray"
                                            BorderThickness="1"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch">
                                        <Label Style="{StaticResource HeaderLabelStyle}"
                                               Content="{Binding}"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                                Margin="0 10 0 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Style="{StaticResource HeaderLabelStyle}"
                                   Grid.Column="0"
                                   Content="Question"/>

                            <comp:IconButton ToolTip="Edit"
                                             Grid.Column="1"
                                             Margin="0 0 10 0"
                                             MaterialIcon="Edit"/>
                        </Grid>
                        <ItemsControl ItemsSource="{StaticResource TestAnswers}"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"
                                                VerticalAlignment="Stretch"
                                                HorizontalAlignment="Stretch"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray"
                                            BorderThickness="1"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch">
                                        <Label Style="{StaticResource HeaderLabelStyle}"
                                               Content="{Binding}"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                </StackPanel>

                <comp:IconButton VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 MaterialIcon="ContentSave"
                                 Content="Save"
                                 Grid.Row="3"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
