<Page x:Class="QuizGenerator.View.Views.Pages.TrainingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:QuizGenerator.View.Views.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:comp="clr-namespace:QuizGenerator.View.Components"
      xmlns:vms="clr-namespace:QuizGenerator.ViewModel.ViewModels.Pages;assembly=QuizGenerator.ViewModel"
      mc:Ignorable="d"
      d:Height="240"
      d:Width="550"
      Title="Training"
      d:DataContext="{d:DesignInstance vms:TrainingViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <comp:SmoothProgressBar Grid.Row="0"
                                Value="9"
                                Maximum="12"/>

        <Grid Grid.Row="1"
              Margin="10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Style="{StaticResource HeaderLabelStyle}"
                   Grid.Column="0"
                   Content="Remaining time: 08:13"/>

            <comp:IconButton MaterialIcon="Flag"
                             ToolTip="Finish"
                             Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Grid.Column="1">
                <StackPanel.Resources>
                    <x:Array x:Key="TestAnswers"
                             Type="{x:Type sys:String}">
                        <sys:String>Answer 1</sys:String>
                        <sys:String>Answer 2</sys:String>
                        <sys:String>Answer 3</sys:String>
                        <sys:String>Answer 4</sys:String>
                    </x:Array>
                </StackPanel.Resources>
                <Label Style="{StaticResource HeaderLabelStyle}"
                       Content="Question"/>
                <ItemsControl ItemsSource="{StaticResource TestAnswers}"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray"
                                    BorderThickness="1"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                <Label Style="{StaticResource HeaderLabelStyle}"
                                       Content="{Binding}"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>


            <comp:IconButton MaterialIcon="ChevronDoubleRight"
                             ToolTip="Skip"
                             Grid.Column="2"/>
        </Grid>
    </Grid>
</Page>
