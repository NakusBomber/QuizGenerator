<Window x:Class="QuizGenerator.View.Views.Windows.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGenerator.View.Views.Windows"
        mc:Ignorable="d"
        Style="{StaticResource FlatWindowStyle}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Export"
        Height="270"
        Width="400">
    <Grid Margin="50 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>

            <ComboBox.Items>
                <ComboBoxItem>XML</ComboBoxItem>
                <ComboBoxItem>JSON</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
        <Button Style="{StaticResource PrimaryButtonStyle}"
                Grid.Row="2"
                MaxWidth="150"
                Content="Export"/>
    </Grid>
</Window>
